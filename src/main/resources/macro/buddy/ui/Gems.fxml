<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="macro.buddy.ui.GemsController">
	<top>
		<HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
			<Label text="Exile Buddy">
				<font>
					<Font name="System Bold" size="24.0" />
				</font>
			</Label>
			<Separator HBox.hgrow="ALWAYS" />
			<VBox alignment="CENTER" spacing="5.0" HBox.hgrow="SOMETIMES">
				<ComboBox fx:id="buildCombo" maxWidth="1.7976931348623157E308" onAction="#buildComboUpdate"
				          promptText="Build" visibleRowCount="5"/>
				<HBox alignment="CENTER" spacing="5.0">
					<TextField fx:id="buildName" promptText="Build Name" HBox.hgrow="ALWAYS"/>
					<Button minWidth="100" mnemonicParsing="false" onAction="#addBuild" text="Add Build"/>
				</HBox>
			</VBox>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</BorderPane.margin>
		</HBox>
	</top>
	<center>
      <ScrollPane>
         <content>
      		<VBox fx:id="gemVBox" alignment="TOP_CENTER" spacing="5.0" />
         </content>
	      <BorderPane.margin>
		      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	      </BorderPane.margin>
      </ScrollPane>
	</center>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</BorderPane>
