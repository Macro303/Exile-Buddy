<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="macro.buddy.ui.SettingsController">
	<top>
		<Label text="Exile Buddy Setup" BorderPane.alignment="CENTER">
			<font>
				<Font name="System Bold" size="24.0"/>
			</font>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
			</BorderPane.margin>
		</Label>
	</top>
	<center>
		<VBox spacing="5.0">
			<children>
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<ComboBox fx:id="buildCombo" promptText="Build" visibleRowCount="5" HBox.hgrow="ALWAYS"/>
					</children>
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<TextField fx:id="buildName" promptText="Build Name" HBox.hgrow="ALWAYS"/>
						<Button mnemonicParsing="false" onAction="#addBuild" text="Add Build" minWidth="100"/>
					</children>
				</HBox>
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<TextField fx:id="pastebinCode" promptText="Pastebin Code" HBox.hgrow="ALWAYS"/>
						<Button mnemonicParsing="false" onAction="#importBuild" text="Import Build" minWidth="100"/>
					</children>
				</HBox>
			</children>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
			</BorderPane.margin>
		</VBox>
	</center>
	<bottom>
		<Button mnemonicParsing="false" onAction="#saveAndContinue" text="Save and Continue"
		        BorderPane.alignment="CENTER" minWidth="100">
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
			</BorderPane.margin>
		</Button>
	</bottom>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
	</padding>
</BorderPane>
