<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="macro.buddy.ui.SetupController">
	<top>
		<Label text="Exile Buddy Setup" BorderPane.alignment="CENTER">
			<font>
				<Font name="System Bold" size="24.0"/>
			</font>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
			</BorderPane.margin>
		</Label>
	</top>
	<center>
		<VBox spacing="5.0">
			<children>
				<Label text="Account Name:">
					<font>
						<Font name="System Bold" size="12.0"/>
					</font>
				</Label>
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<TextField fx:id="accountName" HBox.hgrow="ALWAYS"/>
					</children>
				</HBox>
				<Label text="Client.txt Location:">
					<font>
						<Font name="System Bold" size="12.0"/>
					</font>
				</Label>
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<TextField fx:id="clientPath" HBox.hgrow="ALWAYS"/>
						<Button mnemonicParsing="false" onAction="#searchFiles" text="Search"/>
					</children>
				</HBox>
			</children>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
			</BorderPane.margin>
		</VBox>
	</center>
	<bottom>
		<Button mnemonicParsing="false" onAction="#saveAndContinue" text="Save and Continue"
		        BorderPane.alignment="CENTER">
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
			</BorderPane.margin>
		</Button>
	</bottom>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
	</padding>
</BorderPane>
