<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Box?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="macro.buddy.ui.builds.BuildController">
	<top>
		<HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
			<Label text="Exile Buddy" minWidth="175" id="title"/>
			<Separator HBox.hgrow="ALWAYS" visible="false"/>
			<ComboBox fx:id="buildCombo" onAction="#buildSelection" promptText="Build" visibleRowCount="5"/>
			<Button minWidth="100" mnemonicParsing="false" onAction="#addBuild" text="Add Build"/>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
			</BorderPane.margin>
		</HBox>
	</top>
	<center>
		<TabPane tabClosingPolicy="UNAVAILABLE">
			<Tab text="Gems">
				<ScrollPane>
					<BorderPane.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
					</BorderPane.margin>
					<VBox fx:id="buildGemLinks" alignment="TOP_CENTER" spacing="5.0"/>
				</ScrollPane>
			</Tab>
			<Tab text="Gear">
				<ScrollPane>
					<BorderPane.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
					</BorderPane.margin>
					<GridPane>
						<Label text="Weapon" GridPane.rowIndex="0" GridPane.rowSpan="4" GridPane.columnIndex="0" GridPane.columnSpan="2" minWidth="100.0" prefWidth="100.0" maxWidth="100.0" minHeight="200.0" prefHeight="200.0" maxHeight="200.0" style="-fx-border-color: YELLOW; -fx-border-style: dashed; -fx-border-width: 2;" />
						<Separator GridPane.rowIndex="0" GridPane.rowSpan="3" GridPane.columnIndex="2" GridPane.columnSpan="1" minWidth="50.0" minHeight="150.0"/>
						<Label text="Helmet" GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="3" GridPane.columnSpan="2" minWidth="100.0" prefWidth="100.0" maxWidth="100.0" minHeight="100.0" prefHeight="100.0" maxHeight="100.0" style="-fx-border-color: YELLOW; -fx-border-style: dashed; -fx-border-width: 2;" />
						<Separator GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="5" GridPane.columnSpan="1" minWidth="50.0" minHeight="100.0"/>
						<Label text="Weapon" GridPane.rowIndex="0" GridPane.rowSpan="4" GridPane.columnIndex="6" GridPane.columnSpan="2" minWidth="100.0" prefWidth="100.0" maxWidth="100.0" minHeight="200.0" prefHeight="200.0" maxHeight="200.0" style="-fx-border-color: YELLOW; -fx-border-style: dashed; -fx-border-width: 2;" />
						<Label text="Chest" GridPane.rowIndex="2" GridPane.rowSpan="3" GridPane.columnIndex="3" GridPane.columnSpan="2" minWidth="100.0" prefWidth="100.0" maxWidth="100.0" minHeight="150.0" prefHeight="150.0" maxHeight="150.0" style="-fx-border-color: YELLOW; -fx-border-style: dashed; -fx-border-width: 2;" />
						<Label text="Necklace" GridPane.rowIndex="2" GridPane.rowSpan="1" GridPane.columnIndex="5" GridPane.columnSpan="1" minWidth="50.0" prefWidth="50.0" maxWidth="50.0" minHeight="50.0" prefHeight="50.0" maxHeight="50.0" style="-fx-border-color: YELLOW; -fx-border-style: dashed; -fx-border-width: 2;" />
						<Label text="Ring" GridPane.rowIndex="3" GridPane.rowSpan="1" GridPane.columnIndex="2" GridPane.columnSpan="1" minWidth="50.0" prefWidth="50.0" maxWidth="50.0" minHeight="50.0" prefHeight="50.0" maxHeight="50.0" style="-fx-border-color: YELLOW; -fx-border-style: dashed; -fx-border-width: 2;" />
						<Label text="Ring" GridPane.rowIndex="3" GridPane.rowSpan="1" GridPane.columnIndex="5" GridPane.columnSpan="1" minWidth="50.0" prefWidth="50.0" maxWidth="50.0" minHeight="50.0" prefHeight="50.0" maxHeight="50.0" style="-fx-border-color: YELLOW; -fx-border-style: dashed; -fx-border-width: 2;" />
						<Separator GridPane.rowIndex="4" GridPane.rowSpan="2" GridPane.columnIndex="0" GridPane.columnSpan="1" minWidth="50.0" minHeight="100.0"/>
						<Label text="Glove" GridPane.rowIndex="4" GridPane.rowSpan="2" GridPane.columnIndex="1" GridPane.columnSpan="2" minWidth="100.0" prefWidth="100.0" maxWidth="100.0" minHeight="100.0" prefHeight="100.0" maxHeight="100.0" style="-fx-border-color: YELLOW; -fx-border-style: dashed; -fx-border-width: 2;" />
						<Label text="Belt" GridPane.rowIndex="5" GridPane.rowSpan="1" GridPane.columnIndex="3" GridPane.columnSpan="2" minWidth="100.0" prefWidth="100.0" maxWidth="100.0" minHeight="50.0" prefHeight="50.0" maxHeight="50.0" style="-fx-border-color: YELLOW; -fx-border-style: dashed; -fx-border-width: 2;" />
						<Label text="Boots" GridPane.rowIndex="4" GridPane.rowSpan="2" GridPane.columnIndex="5" GridPane.columnSpan="2" minWidth="100.0" prefWidth="100.0" maxWidth="100.0" minHeight="100.0" prefHeight="100.0" maxHeight="100.0" style="-fx-border-color: YELLOW; -fx-border-style: dashed; -fx-border-width: 2;" />
						<Separator GridPane.rowIndex="4" GridPane.rowSpan="2" GridPane.columnIndex="7" GridPane.columnSpan="1" minWidth="50.0" minHeight="100.0"/>
					</GridPane>
				</ScrollPane>
			</Tab>
		</TabPane>
	</center>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
	</padding>
</BorderPane>
